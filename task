    <!--Blinking Text using jQuery-->
    <h1 style="color: black; text-align: center;">TASK 3</h1>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
    function blink_text() {
        $('.blink').fadeOut(500);
        $('.blink').fadeIn(500);
    }
    setInterval(blink_text, 1000);
    </script>
    <h1 class="blink">Blinking The Text</h1>
